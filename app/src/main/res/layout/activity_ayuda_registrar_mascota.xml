<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:scrollbarStyle="outsideOverlay">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".actividades.ayudas.AyudaMensajes"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/help_como_registrar_mascota_registrarMascota"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_bold" />

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

        <!-- INFO BÁSICA -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/help_info_basica_registrarMascota"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins"
            android:textSize="16sp"
            android:layout_marginBottom="10dp"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/infobasicamascota"
            android:layout_gravity="center"
            app:strokeColor="@color/black"
            app:strokeWidth="2dp"
            android:layout_marginBottom="20dp"/>

        <!-- ICONO DE SELECCIONAR LA FECHA -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/help_icono_calendario_registrarMascota"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins"
            android:textSize="16sp"
            android:layout_marginBottom="40dp"/>


        <!-- BOTON DE SUBIR FOTO -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/help_boton_foto_mascota_registrarMascota"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins"
            android:textSize="16sp"
            android:layout_marginBottom="10dp"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/botonfotomascota"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"/>

        <!-- MINIATURA DE LA FOTO -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/help_miniatura_foto_registrarMascota"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins"
            android:textSize="16sp"
            android:layout_marginBottom="10dp"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/fotohechaminiatura"
            android:layout_gravity="center"
            app:strokeColor="@color/black"
            app:strokeWidth="2dp"
            android:layout_marginBottom="20dp"/>

        <!-- MINIATURA DE LA FOTO -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/help_dialog_miniatura_registrarMascota"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins"
            android:textSize="16sp"
            android:layout_marginBottom="10dp"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/dialogimagen"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"/>


        <!-- BOTÓN VOLVER -->
        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnVolverAyudaRegistrarMascota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/volver"
            android:fontFamily="@font/poppins_semibold"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:layout_gravity="end"
            app:cornerRadius="10dp"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            app:strokeColor="@color/black"
            app:strokeWidth="2dp"
            tools:ignore="RtlSymmetry">

        </com.google.android.material.button.MaterialButton>

    </LinearLayout>

</ScrollView>