<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:scrollbarStyle="outsideOverlay">

    <LinearLayout android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".actividades.ayudas.AyudaPedirCita"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/como_pedir_una_cita"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_bold" />

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

        <!-- SELECCION DE LA MASCOTA -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/help_selec_mascota_pedirCita"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins"
            android:textSize="16sp"
            android:layout_marginBottom="10dp"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/seleccionmascota"
            android:layout_gravity="center"
            app:strokeColor="@color/black"
            app:strokeWidth="2dp"
            android:layout_marginBottom="30dp"/>

        <!-- SELECCION DEL TIPO DE CITA -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/help_select_tipo_cita_pedirCita"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins"
            android:textSize="16sp"
            android:layout_marginBottom="10dp"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/tipodecita"
            android:layout_gravity="center"
            app:strokeColor="@color/black"
            app:strokeWidth="2dp"
            android:layout_marginBottom="30dp"/>

        <!-- SELECCION DE OTRO TIPO DE CITA -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/help_otra_cita_pedirCita"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins"
            android:textSize="16sp"
            android:layout_marginBottom="10dp"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/otrotipocita"
            android:layout_gravity="center"
            app:strokeColor="@color/black"
            app:strokeWidth="2dp"
            android:layout_marginBottom="30dp"/>

        <!-- SELECCION DE FECHA Y HORA -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/help_selec_fecha_hora_pedirCita"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins"
            android:textSize="16sp"
            android:layout_marginBottom="10dp"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/fechahora"
            android:layout_gravity="center"
            app:strokeColor="@color/black"
            app:strokeWidth="2dp"
            android:layout_marginBottom="30dp"/>

        <!-- OTROS DATOS DE LA CITA -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/help_otros_datos_pedirCita"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins"
            android:textSize="16sp"
            android:layout_marginBottom="10dp"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/otrosdatos"
            android:layout_gravity="center"
            app:strokeColor="@color/black"
            app:strokeWidth="2dp"
            android:layout_marginBottom="30dp"/>

        <!-- TEXTO FINAL -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ahora_solo_queda_pedir_la_cita"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_semibold"
            android:layout_marginBottom="20dp"/>

        <!-- BOTÃ“N VOLVER -->
        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnVolverAyudaPedirCita"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/volver"
            android:fontFamily="@font/poppins_semibold"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:layout_gravity="end"
            app:cornerRadius="10dp"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            app:strokeColor="@color/black"
            app:strokeWidth="2dp"
            tools:ignore="RtlSymmetry">

        </com.google.android.material.button.MaterialButton>

    </LinearLayout>

</ScrollView>