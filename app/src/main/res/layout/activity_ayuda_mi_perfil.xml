<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:scrollbarStyle="outsideOverlay">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".actividades.ayudas.AyudaMiPerfil"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/que_ves_en_miPerfil"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_bold" />

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

        <!-- NOMBRE Y MIS MASCOTAS -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/help_nombre_mascotas_miPerfil"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins"
            android:textSize="16sp"
            android:layout_marginBottom="10dp"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/nombreymascotas"
            android:layout_gravity="center"
            app:strokeColor="@color/black"
            app:strokeWidth="2dp"
            android:layout_marginBottom="30dp"/>

        <!-- ELIMINAR MASCOTAS -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/help_eliminar_mascotas_miPerfil"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins"
            android:textSize="16sp"
            android:layout_marginBottom="10dp"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/eliminarmascota"
            android:layout_gravity="center"
            app:strokeColor="@color/black"
            app:strokeWidth="2dp"
            android:layout_marginBottom="30dp"/>

        <!-- CAMBIAR CONTRASEÑA -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/help_cambiar_contrasena_miPerfil"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins"
            android:textSize="16sp"
            android:layout_marginBottom="10dp"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cambiarpasswd"
            android:layout_gravity="center"
            app:strokeColor="@color/black"
            app:strokeWidth="2dp"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/help_como_cambiar_contrasena_miPerfil"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins"
            android:textSize="16sp"
            android:layout_marginBottom="20dp"/>

        <!-- BOTÓN VOLVER -->
        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnVolverAyudaMiPerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/volver"
            android:fontFamily="@font/poppins_semibold"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:layout_gravity="end"
            app:cornerRadius="10dp"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            app:strokeColor="@color/black"
            app:strokeWidth="2dp"
            tools:ignore="RtlSymmetry">

        </com.google.android.material.button.MaterialButton>

    </LinearLayout>

</ScrollView>